{
    "compilerOptions": {
        "module": "commonjs",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "target": "es2017",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "resolveJsonModule": true,
        "useUnknownInCatchVariables": false,
        "paths": {
            "@src/*": ["./src/*"],
            "@common/*": ["./src/common/*"],
            "@utils/*": ["./src/shared/utils/*"],
            "@config": ["./src/config"],
            "@modules/*": ["./src/modules/*"],
            "@shared/*": ["./src/shared/*"]
        }
    }
}
